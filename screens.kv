
#global rules
<Button, Label>
    font_size: 30


<HUD@ActionBar>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Action Bar'
            with_previous: False
        ActionOverflow:
        ActionButton:
            text: 'Btn1'
            on_press:
        ActionGroup:
            text: 'Help'
            ActionButton:
                text: 'Tutorial'
            ActionButton:
                text: 'Role Info'
            ActionButton:
                text: 'About'

#screen roll

<titleScreen>
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'logo.png'
        Button:
            text: 'Start'
            on_press: root.wipeJson()
            on_press: root.manager.current = 'setNumber'

<setNumber>
    BoxLayout:
        orientation: 'vertical'
        Slider:
            step: 1
            id: playerNumberSlider
            range: (5, 9)
            value: 8
            orientation: 'horizontal'
        Button:
            text: 'Number of players? %s'  % int(playerNumberSlider.value)
            on_press: root.putNumber()
            on_press: root.manager.current = 'setSetup'

<setSetup>
    on_enter: root.buildContent()
    BoxLayout:
        orientation: 'vertical'
        Accordion:
            orientation: 'vertical'
            id: setupAccordion
        Button:
            size_hint: (1, .2)
            text: 'I pick this one!'
            on_press: root.putSetup()
            on_press: root.manager.current = 'setPlayers'

<setPlayers>
    on_enter: root.buildContent()
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: playerGrid
            cols: 2
        Button:
            size_hint: (1, .2)
            text: 'Set!'
            on_press: root.putPlayers()
            on_press: root.manager.current = 'roleDistribution'

<roleDistribution>
    on_enter: root.randomize()
    on_enter: root.buildContent()
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 3
            padding: 30
            spacing: 20
            id: roleLayout
        Label:
            text: 'View your role'
            size_hint: (1, .2)

<deadlineTimer>
    on_enter: root.buildContent()
    BoxLayout:
        id: deadlineTimer
<dayResolution>
    on_enter:root.buildContent()
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: (1, .2)
            text: 'Who did you lynch?'
        GridLayout:
            cols: 3
            padding: 30
            spacing: 20
            id: dayLayout
<Night>

<popupContent@BoxLayout>:
    Label:
        text: 'test'