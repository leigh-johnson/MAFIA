#global rules
<Button, Label>
    font_size: sp(30)
    halign: 'center'
    valign: 'middle'
    background_normal: "atlas://img/button/buttonatlas/red"
    background_down:"atlas://img/button/buttonatlas/orange"


<Screen>
    canvas.before:
        Color:
            rgba: (.3,.3,.3, .8)
        Rectangle:
            pos: self.pos
            size: self.size

<Popup>:
    font_size: sp(15)

#Buttons
<SmallTextButton@Button>:
    font_size: sp(15)

<IconButton>:
    canvas:
        Rectangle:
            source:self.icon
            pos: self.pos
            size: self.size

<GreenButton@Button>:
    background_normal: 'atlas://img/button/buttonatlas/green'
    background_down: 'atlas://img/button/buttonatlas/orange'

<YellowButton@Button>:
    background_normal: 'atlas://img/button/buttonatlas/yellow'
    background_down: 'atlas://img/button/buttonatlas/orange'

<RedButton@Button>:
    background_normal: 'atlas://img/button/buttonatlas/red'
    background_down: 'atlas://img/button/buttonatlas/orange'

<SkyButton@Button>:
    background_normal: 'atlas://img/button/buttonatlas/sky'
    background_down: 'atlas://img/button/buttonatlas/orange'

<MidnightButton@Button>:
    background_normal: 'atlas://img/button/buttonatlas/midnight'
    background_down: 'atlas://img/button/buttonatlas/orange'

<PurpleButton@Button>:
    background_normal: 'atlas://img/button/buttonatlas/purple'
    background_down: 'atlas://img/button/buttonatlas/orange'

<OrangeButton@Button>:
    background_normal: 'atlas://img/button/buttonatlas/orange'
    background_down: 'atlas://img/button/buttonatlas/yellow'